        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="114,0,0,0">
            <TextBlock>
                <Run Text="Подождите, идет загрузка данных!" FontSize="36"/>
            </TextBlock>
            <ProgressBar Name="r" Height="30" Width="500" Margin="50" IsIndeterminate="True">
                
            </ProgressBar>
        </StackPanel>
    </Grid>
</Window>
